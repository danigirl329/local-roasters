<h1 class="text-3xl mb-10 mt-4">Roasters Near You</h1>

<div class="flex mb-4 px-4 py-4">
  <% @roasters.each do |roaster| %>
    <div class="roaster w-1/3 max-w-sm rounded overflow-hidden shadow-lg">
      <div class="px-6 py-4">
        <div class="font-bold text-xl mb-2">
          <h2 class="text-2xl font-bold leading-tight tracking-tighter text-primary"><%= roaster.name %></h2>
        </div>
        <p class="text-gray-700 text-base"><%= roaster.location%></p>
        <p class="text-gray-700 text-base"><%= link_to roaster.website, roaster.website%></p>
      </div>
    </div>
  <% end %>   
</div>

